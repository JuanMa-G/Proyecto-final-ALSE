#ifndef COMPONENT_H
#define COMPONENT_H

#include <QString>

// Clase que representa un componente del inventario
class Component {
public:
    // Constructor por defecto
    Component();

    // Constructor con todos los parámetros
    Component(int id, const QString &name, const QString &type, int quantity,
              const QString &location, const QString &purchaseDate);

    // Métodos para obtener los valores (getters)
    int getId() const;
    QString getName() const;
    QString getType() const;
    int getQuantity() const;
    QString getLocation() const;
    QString getPurchaseDate() const;

    // Métodos para modificar los valores (setters)
    void setId(int id);
    void setName(const QString &name);
    void setType(const QString &type);
    void setQuantity(int quantity);
    void setLocation(const QString &location);
    void setPurchaseDate(const QString &date);

private:
    // Atributos del componente (todos son privados para mantener encapsulamiento)
    int id;
    QString name;
    QString type;
    int quantity;
    QString location;
    QString purchaseDate;
};

#endif // COMPONENT_H
